/* pages/collect/collect.wxss */


/*编号*/
.id{
  font-size:13px;
  background:#fff;
  padding:0 15rpx;
  height:100rpx;
  line-height:100rpx;
  border-bottom:1px solid #eee;
}
.id>text:nth-child(2){
  float:right;
  color:#ffca00;
}


/*删除*/
.delete{
  font-size:13px;
  background:#fff;
  padding:0 15rpx;
  height:100rpx;
  line-height:100rpx;
  border-top:1px solid #eee;
  display: flex;
  align-items:center;
}
.delete>view{
  width:80%;
}
.delete>view>text:nth-child(2){
  color:#ffca00;
}
.delete>button{
  width:20%;
  height:50rpx;
  background:#ff6868;
  color:#fff;
  line-height:50rpx;
  font-size:13px;
}

.select{
  height:230rpx;
  font-size:14px;
  margin-bottom:30rpx;
}
.select>view{
  display:flex;
  justify-content:space-around;
  height:100%;
  padding:15rpx 10rpx;
  background:#fff;
}
/*图片*/
.select>view>.s_img{
  width:25%;
  height:100%;
  padding:15rpx 0;
}
.select>view>.s_img>image{
  display: block;
  margin:0 auto;
  width:100%;
  height:80%;
}
/*介绍*/
.select>view>.s_details{
  width:50%;
}
.select>view>.s_details>view:nth-child(1){
  width:100%;
  color:#555;
  overflow: hidden;
  height:80rpx;
  line-height:40rpx;
  text-overflow:ellipsis;
}
.select>view>.s_details>text{
  border:1px solid #ff6868;
  color:#ff6868;
  border-radius:5px;
  padding:1px 5px;
  font-size:11px;
  margin:10rpx 0;
}
.select>view>.s_details>view:nth-child(4){
  width:100%;
  font-size:12px;
  color:#ddd;
  margin-bottom:10rpx;
}
.select>view>.s_details>view:nth-child(5){
  display: inline-block;
  color:#fff;
  background:#ddd;
  padding:5rpx 15rpx;
  font-size:12px;
}
/*价格*/
.select>view>.s_price{
  width:20%;
  text-align:right;
}
.select>view>.s_price>view:nth-child(1){
  width:100%;
  margin-bottom:10rpx;
  color:#ff6868;
  font-weight:bold;
}
.select>view>.s_price>text:nth-child(2){
  width:100%;
  color:#ddd;
  margin-bottom:95rpx;
}
.select>view>.s_price>view:nth-child(3){
  width:100%;
  color:#fff;
}
.select>view>.s_price>view:nth-child(3)>text{
  padding:0 5rpx;
  margin-left:2rpx;
  border-radius:3px;
}
.select>view>.s_price>view:nth-child(3)>text:nth-child(1){
  background:#ff782e;
}
.select>view>.s_price>view:nth-child(3)>text:nth-child(2){
  background:#ffca00;
}
.select>view>.s_price>view:nth-child(3)>text:nth-child(3){
  background:#23bbff;
}
