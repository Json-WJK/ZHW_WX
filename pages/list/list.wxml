      <view class="select">
        <!-- <block wx:for="{{select}}" wx:key="item.game_id"> -->
          <view data-game_id="{{item.game_id}}" bindtap="detail">
            <view class="s_img">
              <image src="{{imgs[index]}}" lazy-load mode="aspectFill"></image>
            </view>
            <view class="s_details">
              <view>{{item.game_describe}}啊实打实大撒大所大所多撒奥所大所大所多撒多撒撒大撒大</view>
              <text></text>
              <view>角色名：给我五杀{{item.game_number}}</view>
              <view>
                <text>{{item.game_server}}英雄联盟/电信/巨神峰</text>
              </view>
            </view>
            <view class="s_price">
              <view>￥1.00{{item.game_prices}}</view>
              <text>/小时</text>
              <view>
                <text>商</text>
                <text>陪</text>
                <text>顶</text>
              </view>
            </view>
          </view>
        <!-- </block> -->
      </view>
    </view>
    <!-- 解锁码及评价 -->
    <view class="appraise">
        解锁码:
        <text>b0cefe517f366e611937724</text>
        <button>复制</button>
        <button>评价</button>
    </view>
  </view>
</view>