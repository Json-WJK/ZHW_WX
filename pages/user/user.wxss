/*ul列表*/
.lifell{
  height:100rpx;
  width:95%;
  margin: 0 auto;
  font-size: 13px;
  color:#555;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing:border-box;
  padding:0 50rpx;
  background: #fff;
  border-bottom:1px solid #eee;
}
.lifell>.li_l{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.lifell>.li_t{
  width:90%;
}
.lifell>.li_r{
  width: 15rpx; 
  height: 15rpx; 
  border-top:3rpx solid #ccc; 
  border-right: 3rpx solid #ccc;  
  transform: rotate(45deg)
}