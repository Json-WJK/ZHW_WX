/* pages/user/user.wxss */

/*视频*/
.video{
  width:100%;
  height:420rpx;
  overflow: hidden;
  position:relative;
}
.video>video{
  width:100%;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}




.user{
  display: flex;
  box-sizing: border-box;
  padding:10rpx 20rpx;
  background: #fff;
  width:95%;
  margin: 0 auto;
  margin-bottom:20rpx;
}
/*右侧余额*/
.funds{
  width:70%;
  color:#333;
  font-size:14px;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  padding-top:30rpx;
}
.fund{
  display: flex;
  justify-content: space-around;
}
.fund>view{
  width: 50%;
  text-align: center;
}
.fund>view>view:nth-child(1){
  color:#000;
  font-weight:bold;
}

/*充值*/
.uptop{
  width: 100%;
}
.uptop>button{
  width: 60%;
  color:#fff;
  background: #FEC805;
  height:60rpx;
  line-height:60rpx;
  font-size:15px;
}



/* 左侧用户 */
.img{
  width:30%;
}
/*用户头像*/
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}


.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size:15px;
}

