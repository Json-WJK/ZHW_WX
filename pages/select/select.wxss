/* pages/select/select.wxss */
.select_bg{
  background:#fff;
}
/* 顶部固定 */
.t_fixed{
  position: fixed;
  width:100%;
  background:#fff;
}
.relative{
  position: relative;
}
/*搜索历史记录*/  
.history{
  visibility: visible;
  font-size:13px;
  color:#555;
  line-height:50rpx;
  box-sizing: border-box;
  position: absolute;
  background:#fff;
  width:100%;
  overflow: hidden;
  transition: .5s;
  opacity: 1;
  z-index: 10;
}
.history>.title{
  display: block;
  width:100%;
  text-align:center;
}
.history>.hot{
   display:flex;
   justify-content: space-around;
   margin:10rpx 0;
}
.history>.hot>text{
  width:20%;
  border:1px solid #eee;
  border-radius:5px;
  text-align:center;
}
.history>.li{
  padding:15rpx;
  border-bottom:1px solid #eee;
}
.history>.li>button{
  float:right;
  height:50rpx;
  line-height:50rpx;
  font-size:12px;
  color:#555;
  background:#fff;
}
.away{
  padding:15rpx 0;
}


/*搜索框*/
.seek{
  width:95%;
  margin:0 auto;
}
.seek>input{
  display:inline-block;
  width:80%;
  background:#eee;
  border-radius:5px;
  vertical-align:middle;
  padding:0 20rpx;
  box-sizing:border-box;
  font-size:14px;
}
.seek>text{
  font-size:13px;
  color:rgb(69, 151, 228);
  width:20%;
  text-align:center;
}

/*游戏分类选择*/
.ify{
  display:flex;
  border-bottom:1px solid #eee;
  position:relative;
}
.ify>view{
  width:33%;
  text-align:center;
  font-size:14px;
  height:80rpx;
  line-height:80rpx;
}
.ify>view>image{
  width:25rpx;
  height:25rpx;
  vertical-align:middle;
  float:right;
  margin:30rpx 20rpx 0 0;
}

/*商品列表*/
.select{
  height:230rpx;
  font-size:14px;
  padding-top:140rpx;
}
/*每一个商品*/
.select>view{
  display:flex;
  justify-content:space-around;
  height:100%;
  padding:15rpx 10rpx;
  border-bottom:1px solid #eee;
  background:#fff;
}
/*图片*/
.select>view>.s_img{
  width:25%;
  height:100%;
  padding:15rpx 0;
}
.select>view>.s_img>image{
  display: block;
  margin:0 auto;
  width:100%;
  height:80%;
}
/*介绍*/
.select>view>.s_details{
  width:50%;
}
.select>view>.s_details>view:nth-child(1){
  width:100%;
  color:#555;
  overflow: hidden;
  height:80rpx;
  line-height:40rpx;
  text-overflow:ellipsis;
}
.select>view>.s_details>text{
  border:1px solid #ff6868;
  color:#ff6868;
  border-radius:5px;
  padding:1px 5px;
  font-size:11px;
  margin:10rpx 0;
}
.select>view>.s_details>view:nth-child(4){
  width:100%;
  font-size:12px;
  color:#ddd;
  margin-bottom:10rpx;
}
.select>view>.s_details>view:nth-child(5){
  display: inline-block;
  color:#fff;
  background:#ddd;
  padding:5rpx 15rpx;
  font-size:12px;
}
/*价格*/
.select>view>.s_price{
  width:20%;
  text-align:right;
}
.select>view>.s_price>view:nth-child(1){
  width:100%;
  margin-bottom:10rpx;
  color:#ff6868;
  font-weight:bold;
}
.select>view>.s_price>text:nth-child(2){
  width:100%;
  color:#ddd;
  margin-bottom:100rpx;
}
.select>view>.s_price>view:nth-child(3){
  width:100%;
  color:#fff;
}
.select>view>.s_price>view:nth-child(3)>text{
  padding:0 5rpx;
  margin-left:2rpx;
  border-radius:3px;
}
.select>view>.s_price>view:nth-child(3)>text:nth-child(1){
  background:#ff782e;
}
.select>view>.s_price>view:nth-child(3)>text:nth-child(2){
  background:#ffca00;
}
.select>view>.s_price>view:nth-child(3)>text:nth-child(3){
  background:#23bbff;
}



/*到达底部*/
.isbottom{
  height:20rpx !important;
  color:333;
}
/*搜索记录显示隐藏*/
.ishistory{
  opacity: 0;
  visibility: hidden;
}
/*top切换字体颜色变换*/
.f_color{
  color:#ffca00;
}

/*下拉列表*/
.pull{
  position:absolute;
  top:130rpx;
  display:flex;
  justify-content: space-between;
  background:#fff;
  width:100%;
  flex-wrap:wrap;
  font-size:13px;
  color:#333;
  transition:.5s;
}
.pull>view:nth-child(1){
  width:33.3%;
  text-align:center;
  line-height:100rpx;
}
.pull>view:nth-child(1)>view{
  background:#F7F7FA;
  margin:5rpx 0;
}
/*右侧*/
.pull>view:nth-child(2){
  width:66.6%;
  
}

/*控制点击切换样式*/
.switch_p{
  background:#fff !important;
  color:#ffca00 !important;
}
/*控制综合点击显示隐藏----右侧*/
.data{
  display: none;
}
.block_rs{
  display: block !important;
  width:100%;
  line-height:105rpx;
  box-sizing: border-box;
  padding-left:10rpx;
}
.block_rs>view{
  display: block !important;
  width:100%;
  border-bottom:1px solid #eee;
  box-sizing: border-box;
  padding-left:10rpx;
}
/***/
.img_b{
  position:relative;
  height:100%;
  transition:.5s;
}
.img_b>view{
  width:120rpx;
  position: absolute;
  margin:auto;
  top:0;
  left:0;
  right:0;
  bottom:0;
  height:100rpx;
}
.img_b>view>image{
  width:100rpx;
  height:100rpx;
}
.img_none{
  height:0 !important;
  overflow: hidden;
}

/*游戏下拉列表*/
.game{
  width:100% !important;
  display: flex;
  justify-content:space-around;
  flex-wrap:wrap;
  font-size:13px;
  overflow:hidden;
  height:0;
  color:#FFCD0F;
  line-height:100rpx;
  transition:.5s;
}
.game>text{
  width:23%;
}
.game_h{
  height:200rpx !important;
  
}

/*状态下拉列表*/
.state{
  width:100% !important;
  font-size:15px;
  text-align: center;
  overflow:hidden;
  height:0;
  color:#FFCD0F;
  line-height:100rpx;
  transition:.5s;
  z-index: 10;
}
.state>view{
  background:#fff !important;
}
.state_h{
  height:100rpx !important;
  
}