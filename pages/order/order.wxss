/* pages/order/order.wxss */
.order{
  font-size:13px;
  background:#fff;
}
/*顶部标题*/
.title{
  display:flex;
  justify-content:space-between;
  box-sizing: border-box;
  padding:10rpx 20rpx;
}
/*左侧图片*/
.title>.t_img{
  width:25%;
}
.title>.t_img>image{
  width:100%;
  height:180rpx;
  vertical-align:middle;
}
/*右侧介绍*/
.title>.t_dr{
  width:73%;
  font-size:16px;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
/*第一行*/
.title>.t_dr>view:nth-child(1){
  width:96%;
  font-size:15px;
}
/*第二行*/
.title>.t_dr>view:nth-child(2){
  width:99%;
  font-size:12px;
  color:#ff6868;
}
/*第三行*/
.title>.t_dr>view:nth-child(3){
  width:100%;
  font-size:16px;
  display:flex;
  justify-content:space-between;
  color:#555;
  line-height:30rpx;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(1){
  color:#e91010;
  font-weight:bold;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(1)>text:nth-child(2){
  color:#555;
  font-size:12px;
  line-height:15rpx;
  font-weight:normal;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(2){
  font-size:12px;
  padding:5rpx 0;
  box-sizing: border-box;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(3){
  font-size:12px;
  margin-top:5rpx;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(3)>text{
  padding:0 5rpx;
  margin-left:2rpx;
  border-radius:3px;
  color:#fff;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(3)>text:nth-child(1){
  background:#ff782e;
}
.title>.t_dr>view:nth-child(3)>view:nth-child(3)>text:nth-child(2){
  background:#ffca00;
}

/*租号方式*/
.ify{
  display:flex;
  background:rgb(245,245,245);
  box-sizing: border-box;
  padding:20rpx;
}
.ify>.ifys{
  width:25%;
  text-align:center;
  box-sizing:border-box;
  border-top:1px solid #ffca00;
  border-bottom:1px solid #eee;
}
.ify>.ifys:not(:nth-child(1)){
  border-left:1px solid #eee;
}
.ify>.ifys>view{
  color:#555;
  font-size:14px;
  height:70rpx;
  line-height:70rpx;
}
.ify>.ifys>view:nth-child(1){
  box-sizing:border-box;
  background:#fff;
}
.ify>.ifys>view:nth-child(2){
  box-sizing:border-box;
  background: rgb(245,245,245);
}


/*选择租用时长*/
.time{
  font-size:13px;
  color:#333;
}
.time image{
  width:50rpx;
  height:50rpx;
  vertical-align:middle;
}
.time>view{
  height:100rpx;
  line-height:100rpx;
  box-sizing: border-box;
  padding:0 15rpx;
  border-bottom:1px solid #eee;
}
.time>.duration>view{
  float:right;
}
.time>.duration>view>image{
  margin:0 20rpx;
}
.time>.duration>view>image:nth-child(3){
  margin-right:none;
}
.time>view:nth-child(3){
  text-align:right;
  color:#ffca00;
  font-size:12px;
  border:none;
}

/*ul*/
.ul>view{
  height:80rpx;
  line-height:80rpx;
  box-sizing: border-box;
  padding:0 15rpx;
  border-bottom:1px solid #eee;
  font-size:13px;
  color:#333;
}
.ul>view>text{
  float: right;
  color:#ff6868;
}
.ul>view:nth-child(1)>text{
  color:#999;
}
.ul>view:nth-child(3){
  border:none;
  height:50rpx;
  line-height:50rpx;
}
.ul>view:nth-child(4){
  color:#ff6868;
  text-align:right;
  font-size:12px;
}
.ul>view:nth-child(5){
  text-align: right;
}
.ul>view:nth-child(5)>text{
  color:cornflowerblue;
}
/*底部立即下单*/
.affirm{
  display:flex;
  height:100rpx;
  line-height:100rpx;
  position: fixed;
  width:100%;
  bottom:0;
}
.affirm>view:nth-child(1){
  width:65%;
  text-align: right;
  padding-right:20rpx;
  background:#fff;
}
.affirm>view:nth-child(1)>text{
  font-size:17px;
  color:#e91010;
  margin-left:20rpx;
}
.affirm>view:nth-child(2){
  width:35%;
  text-align:center;
  background:#ffca00;
  color:#fff;
}
/*点击事件切换样式*/
.bg_switch{
  background:#ffca00 !important;
}
/*点击切换显示隐藏*/
.ify_none{
  display: none;
}
/*支付密码框*/
.password{
  text-align: center;
}